@model IEnumerable<DistinctDemo.Models.Team>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Team</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-striped table-bordered" id="teamTable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TeamName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FoundedYear)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LogoImg)
            </th>
            <th></th>
        </tr>
    </thead>
    <tfoot style="display:table-header-group">
        <tr>
            <td>TeamName</td>
            <td>City</td>
            <td>year</td>
            <td>Logo</td>
            <td>Actions</td>
        </tr>
    </tfoot>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TeamName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.City)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FoundedYear)
                </td>
                <td>
                    @*@Html.DisplayFor(modelItem => item.LogoImg)*@
                    <img class="img-thumbnail" width="150" height="100" src='@Url.Content("~/Uploads/" + item.LogoImg)' />
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.TeamId }) |
                    @Html.ActionLink("Details", "Details", new { id = item.TeamId }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.TeamId })
                </td>
            </tr>
        }
    </tbody>


</table>
